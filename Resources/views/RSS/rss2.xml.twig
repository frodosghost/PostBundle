<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>{{ information.title }}</title>
        <link>{{ url(information.link) }}</link>
        <description>{{ information.description }}</description>
        <image>
            <title>{{ information.image.title }}</title>
            <link>{{ url(information.image.link) }}</link>
            <url>{{ url(information.image.src) }}</url>
        </image>
        <docs>{{ information.docs }}</docs>
        <copyright>{{ information.copyright }}</copyright>
        <pubDate>{% if latest_posts.0.publishdate %}{{ latest_posts.0.publishdate|date('D, d M Y H:i:s O') }}{% endif %}</pubDate>
        <lastBuildDate>{% if latest_posts.0.publishdate %}{{ latest_posts.0.publishdate|date('D, d M Y H:i:s O') }}{% endif %}</lastBuildDate>
        <category>{{ information.category }}</category>

        {% for post in latest_posts %}<item>
            <title>{{ post.title }}</title>
            <description>{{ post.excerpt|striptags }}</description>
            <link>{{ url('posts_view', { 'date': post.date, 'slug': post.slug }) }}</link>
            <guid>{{ url('posts_view', { 'date': post.date, 'slug': post.slug }) }}</guid>
            <pubDate>{{ post.publishdate|date('D, d M Y H:i:s O') }}</pubDate>
        </item>
        {% endfor %}

    </channel>
</rss>
