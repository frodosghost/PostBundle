{% extends "ManhattanConsoleBundle:Console:template.html.twig" %}

{% block headline %}Console: Category{% endblock headline %}
{% block title %}Console: Category{% endblock title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index', { 'subdomain': subdomain }) }}">Console</a></li><li><a href="{{ path('console_news') }}">Posts</a></li><li class="current">Category</li>{% endblock breadcrumbs %}

{% block content_content %}

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="title">Title</th>
                    <th>Slug</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('console_news_category_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                    <td>{{ entity.slug }}</td>
                    <td>
                        <a href="{{ path('console_news_category_edit', { 'id': entity.id }) }}" class="btn btn-small btn-info">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content_content %}

{% block content_sidebar %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Article Category Controls</h3>
    </div>
    <div class="panel-body">
        <a href="{{ path('console_news_category_new') }}"  class="btn primary btn-success">Create a new entry</a>
    </div>
</div>
{% endblock content_sidebar %}
