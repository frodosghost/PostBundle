{% extends "ManhattanPostsBundle::layout.html.twig" %}

{% block content %}
<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Excerpt</th>
            <td>{{ entity.excerpt|raw  }}</td>
        </tr>
        <tr>
            <th>Publish Date</th>
            <td>{{ entity.publishdate|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

    <div class="form-actions">
        <a href="{{ path('console_news') }}" class="btn">Back to the list</a>
        {%  if include_documents %}<a href="{{ path('console_news_documents', { 'id': entity.id }) }}" class="btn btn-warning">Manage Documents</a>{% endif %}
        <a href="{{ path('console_news_edit', { 'id': entity.id }) }}" class="btn btn-primary">Edit</a>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <form action="{{ path('console_news_delete', { 'id': entity.id }) }}" class="actions-delete" method="post">
            {{ form_row(delete_form.id) }}
            {{ form_rest(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        {% endif %}
    </div>
{% endblock %}
