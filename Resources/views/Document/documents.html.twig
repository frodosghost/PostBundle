{% extends "ManhattanConsoleBundle:Console:template.html.twig" %}

{% block title %}Console: Posts | Documents | {{ entity.title }}{% endblock title %}
{% block template_title %}Console: Post Documents{% endblock template_title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index') }}">Console</a></li><li><a href="{{ path('console_news') }}">Posts</a></li><li><a href="{{ path('console_news_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></li><li class="current"><a href="{{ path('console_news_documents', { 'id': entity.id }) }}">Documents</a></li>{% endblock breadcrumbs %}

{% block template_console %}

<div class="pure-g-r">
    <div class="pure-u-1-2">

        <div class="l-box">
            <h1>Documents: {{ entity.title }}</h1>
            <a href="{{ path('console_news_edit', { 'id': entity.id }) }}" class="pure-button pure-button-secondary">Back to Edit</a>
            <div class="document-list">
            {% for document in entity.documents %}
                <div class="document well {{ document.extension }}">
                    <p><strong>{{ document.title }}</strong>: {{ document.description }}</p>
                    <ul class="actions">
                        <li><a href="{{ path('console_news_document_edit', {id: entity.id, document_id: document.id}) }}" class="pure-button pure-button-warning small">Edit</a></li>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}<li><a href="{{ path('console_news_document_delete', {id: entity.id, document_id: document.id}) }}" class="pure-button pure-button-error">Remove</a></li>{% endif %}
                    </ul>
                </div>
            {% endfor %}
            </div>
        </div>

    </div>

    <div class="pure-u-1-2">
        <div class="l-box">
            <h2>Upload a New Document</h2>
            <form action="{{ path('console_news_document_create', { 'id': entity.id }) }}" class="pure-form pure-form-stacked" method="post" {{ form_enctype(form) }} novalidate>
                {{ form_widget(form) }}
                <div class="form-actions">
                    <button type="submit" class="pure-button pure-button-primary">Add Document</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
