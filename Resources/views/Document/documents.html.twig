{% extends "ManhattanConsoleBundle:Console:template.html.twig" %}

{% block title %}Console: Posts | Documents | {{ entity.title }}{% endblock title %}
{% block template_title %}Console: Post Documents{% endblock template_title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index', { 'subdomain': subdomain }) }}">Console</a></li><li><a href="{{ path('console_news') }}">Posts</a></li><li><a href="{{ path('console_news_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></li><li class="current"><a href="{{ path('console_news_documents', { 'id': entity.id }) }}">Documents</a></li>{% endblock breadcrumbs %}

{% block content %}
    <div class="col-sm-7">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-btns">
                    <a href="{{ path('console_news_edit', { 'id': entity.id }) }}" class="btn btn-info">Back to Edit</a>
                </div>
                <h3 class="panel-title">Documents: {{ entity.title }}</h3>
            </div>
            <div class="panel-body">
                <div class="document-list">
                {% for document in entity.documents %}
                <div class="document well {{ document.extension }}">
                    <div class="btn-group pull-right">
                        <a href="{{ path('console_news_document_edit', {id: entity.id, document_id: document.id}) }}" class="btn btn-info btn-xs">Edit</a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}<li><a href="{{ path('console_news_document_delete', {id: entity.id, document_id: document.id}) }}" class="btn btn-warning btn-xs">Remove</a></li>{% endif %}
                    </div>
                    <p><i class="fa fa-file"></i> <strong>{{ document.title }}</strong>: {{ document.description }}</p>
                </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Upload a New Document</h3>
            </div>
            <div class="panel-body">
                <form action="{{ path('console_news_document_create', { 'id': entity.id }) }}" class="form-horizontal" method="post" role="form" {{ form_enctype(form) }} novalidate>
                    {{ form_widget(form) }}
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary col-sm-offset-2">Add Document</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock content %}
