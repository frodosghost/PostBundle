{% extends "ManhattanPostsBundle::layout.html.twig" %}

{% block title %}Console: Posts | {{ entity.title }}{% endblock title %}
{% block template_title %}Console: Posts | Edit Document{% endblock template_title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index', { 'subdomain': subdomain }) }}">Console</a></li><li><a href="{{ path('console_news') }}">Posts</a></li><li><a href="{{ path('console_news_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></li><li class="current">Documents</li>{% endblock breadcrumbs %}

{% block template_console %}

<div class="pure-g-r">
    <div class="pure-u-3-4">

        <div class="l-box">

            <form action="{{ path('console_news_document_update', { 'id': entity.post.id, 'document_id': entity.id }) }}" class ="pure-form pure-form-stacked" method="post" {{ form_enctype(edit_form) }} novalidate>
                {{ form_widget(edit_form) }}

                <div class="form-actions">
                    <a href="{{ path('console_news_documents', { 'id': entity.post.id }) }}" class="pure-button">Back to Documents</a>
                    <button type="submit" class="pure-button pure-button-primary">Save</button>
            </form>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}<a href="{{ path('console_news_document_delete', { 'id': entity.post.id, 'document_id': entity.id }) }}" class="btn btn-danger">Remove</a>{% endif %}
                </div>

        </div>
    </div>

</div>

{% endblock %}
