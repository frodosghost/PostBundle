{% extends "ManhattanPostsBundle::layout.html.twig" %}

{% block title %}Console: Posts | {{ entity.title }}{% endblock title %}
{% block template_title %}Console: Posts | Edit Document{% endblock template_title %}
{% block breadcrumbs %}<li><a href="{{ path('console_index', { 'subdomain': subdomain }) }}">Console</a></li><li><a href="{{ path('console_news') }}">Posts</a></li><li><a href="{{ path('console_news_edit', { 'id': entity.id }) }}">{{ entity.title }}</a></li><li class="current">Documents</li>{% endblock breadcrumbs %}

{% block content_content %}
<h2>Edit Document</h2>

<form action="{{ path('console_news_document_update', { 'id': entity.post.id, 'document_id': entity.id }) }}" class ="form-horizontal" method="post" {{ form_enctype(edit_form) }} novalidate>
    {{ form_widget(edit_form) }}
    <div>
        <button type="submit" class="btn btn-primary col-sm-offset-2">Save</button>
    </div>
</form>
{% endblock content_content %}

{% block content_sidebar %}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Document</h3>
    </div>
    <div class="panel-body">
        <p><a href="{{ path('console_news_documents', { 'id': entity.post.id }) }}" class="btn btn-info">Back to Documents</a></p>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('console_news_document_delete', { 'id': entity.post.id, 'document_id': entity.id }) }}" class="btn btn-danger">Remove</a>
        {% endif %}
    </div>
</div>
{% endblock content_sidebar %}
