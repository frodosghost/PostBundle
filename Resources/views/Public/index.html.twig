<h1>Articles</h1>
<table class="records_list table table-striped">
    <thead>
        <tr>
            <th class="title">Title</th>
            <th>Slug</th>
            <th>Published Date</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('posts_view', { 'date': entity.date, 'slug': entity.slug }) }}">{{ entity.title }}</a></td>
            <td>{{ entity.slug }}</td>
            <td>{% if entity.publishdate %}{{ entity.publishdate|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
    {% else %}
        <tr>
            <td>There are no posts</td>
            <td></td>
            <td></td>
        </tr>
    {% endfor %}
    </tbody>
</table>