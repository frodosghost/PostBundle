<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="console_news_attachments" pattern="/{id}/attachments">
        <default key="_controller">ManhattanPostsBundle:Document:attachments</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_news_attachment_create" pattern="/{id}/attachment/create">
        <default key="_controller">ManhattanPostsBundle:Document:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_news_attachment_edit" pattern="/{id}/attachment/{attachment_id}/edit">
        <default key="_controller">ManhattanPostsBundle:Document:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_news_attachment_update" pattern="/{id}/attachment/{attachment_id}/update">
        <default key="_controller">ManhattanPostsBundle:Document:update</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_news_attachment_delete" pattern="/{id}/attachment/{attachment_id}/delete">
        <default key="_controller">ManhattanPostsBundle:Document:delete</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
