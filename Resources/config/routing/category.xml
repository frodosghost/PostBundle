<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="console_news_category" pattern="/category">
        <default key="_controller">ManhattanPostsBundle:Category:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_news_category_new" pattern="/category/new">
        <default key="_controller">ManhattanPostsBundle:Category:new</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_news_category_create" pattern="/category/create">
        <default key="_controller">ManhattanPostsBundle:Category:create</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_news_category_edit" pattern="/category/{id}/edit">
        <default key="_controller">ManhattanPostsBundle:Category:edit</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="console_news_category_update" pattern="/category/{id}/update">
        <default key="_controller">ManhattanPostsBundle:Category:update</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="console_news_category_delete" pattern="/category/{id}/delete">
        <default key="_controller">ManhattanPostsBundle:Category:delete</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
